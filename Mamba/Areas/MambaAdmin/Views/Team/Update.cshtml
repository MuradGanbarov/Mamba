@using Mamba.Areas.MambaAdmin.ViewModels.Team;
@using Mamba.Models;

@model UpdateTeamVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create product</h4>
                        <div>
                            <img src="~/assets/img/team/@Model.ImageUrl" />
                        </div>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname">Surname</label>
                                <input asp-for="Surname" class="form-control" placeholder="Surname">
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo Upload</label>
                                <input asp-for="Photo" class="form-control">
                                <div class="input-group col-xs-12">
                                    <span class="text-danger" asp-validation-for="Photo" accept="image/*"></span>
                                </div>
                            </div>
                            <div class="form-control">
                                <select asp-for="PositionId" asp-items="new SelectList(Model.Positions,nameof(Position.Id),nameof(Position.Name))">
                                    <option type="Position" disabled selected value="PositionId">Choose Position</option>
                                </select>
                                <span class="text-danger" asp-validation-for="PositionId"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a asp-action="index" asp-controller="home" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>